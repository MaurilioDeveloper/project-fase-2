{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "app/transpiled-js",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": [ "es6", "dom" ],
    "types": [ "hammerjs","node" ],    
    "typeRoots": [ "../node_modules/@types" ]
  },
  "include": [
    "**/*"
   ],
  "exclude": [
    "node_modules"
  ]
}